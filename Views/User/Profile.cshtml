@model CourseProjectitr.Models.ViewModels.DashboardViewModel

@{
    var username = Context.Session.GetString("CurrentUserName") ?? User.Identity?.Name ?? "Гость";

}

<h2>Welcome, @username!</h2>




<div class="d-flex gap-2 mb-3">
    <a asp-action="Create" asp-controller="Inventory" class="button-13">Create</a>
    <button type="button" id="SelectDeleteBtn" class="button-13">Delete</button>
</div>

<div class="table-scroll">
    <table class="table-clean table table-bordered table-striped table-hover align-middle text-start">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll" /> Select</th>
                <th>ID</th>
                <th>Title</th>
                <th>Category</th>
                <th>Public</th>
                <th>Tags</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model.OwnedInventories)
            {
                <tr>
                    <td><input type="checkbox" class="row-checkbox" value="@inv.Id" /></td>
                    <td>@inv.NumberPrefix</td>
                    <td>
                        <a asp-action="Details" asp-controller="Inventory" asp-route-id="@inv.Id" class="text-decoration-none fw-semibold">
                            @inv.Title
                        </a>
                    </td>
                    <td>@inv.Category</td>
                    <td>@(inv.IsPublic ? "Yes" : "No")</td>
                    <td>
                        @foreach (var tag in inv.Tags)
                        {
                            <span class="tag-pill">@tag.Name</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />




@if (Model.AccessibleInventories != null && Model.AccessibleInventories.Any())
{
    <h3>Accessible Inventories</h3>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Owner</th>
                <th>Category</th>
                <th>Public</th>
                <th>Tags</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model.AccessibleInventories)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-controller="Inventory" asp-route-id="@inv.Id" class="text-decoration-none fw-semibold">
                            @inv.Title
                        </a>
                    </td>
                    <td>@inv.OwnerName</td>
                    <td>@inv.Category</td>
                    <td>@(inv.IsPublic ? "Yes" : "No")</td>
                    <td>
                        @if (inv.Tags != null && inv.Tags.Any())
                        {
                            foreach (var tag in inv.Tags)
                            {
                                <span class="tag-pill">@tag.Name</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No tags</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No accessible inventories.</p>
}


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const selectAll = document.getElementById("selectAll");
            const deleteBtn = document.getElementById("SelectDeleteBtn");

            if (selectAll) {
                selectAll.addEventListener("change", function () {
                    const checked = this.checked;
                    document.querySelectorAll(".row-checkbox").forEach(cb => cb.checked = checked);
                });
            }

            if (deleteBtn) {
                deleteBtn.addEventListener("click", function () {
                    const selected = Array.from(document.querySelectorAll(".row-checkbox:checked")).map(cb => cb.value);
                    console.log("Selected IDs:", selected);

                    if (selected.length > 0) {
                        const query = selected.map(id => `ids=${id}`).join("&");
                        window.location.href = `/Inventory/SelectDelete?${query}`;
                    } else {
                        alert("Choose at least 1 line");
                    }
                });
            }
        });
    </script>
}

@section Styles {
    <style>
        .tag-pill {
            display: inline-block;
            background-color: #e0e0e0;
            border-radius: 12px;
            padding: 2px 8px;
            margin-right: 4px;
            font-size: 0.85em;
        }
    </style>
}
