@model CourseProjectitr.Models.ViewModels.DashboardViewModel

@{
    var username = Context.Session.GetString("GitHubUser") ?? User.Identity?.Name ?? "Гость";
}
<h2>Welcome, @username!</h2>

<form asp-action="Dashboard" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" id="tagFilter" name="tag" class="form-control" placeholder="Filter by tag..." />
        <button type="submit" class="button-13">Filter</button>
    </div>
</form>

<!-- Toolbar -->
<div class="d-flex gap-2 mb-3">
    <a asp-action="Create" asp-controller="Inventory" class="button-13">Create</a>
    <button type="button" id="EditBtn" class="button-13">Edit</button>
    <button type="button" id="SelectDeleteBtn" class="button-13">Delete</button>
</div>

<table class="table-clean table table-bordered table-striped table-hover align-middle text-start">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAll" /> Select</th>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Public</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inv in Model.OwnedInventories)
        {
            <tr>
                <td><input type="checkbox" class="row-checkbox" value="@inv.Id" /></td>
                <td>@inv.NumberPrefix</td>
                <td>
                    <a asp-action="Details" asp-controller="Inventory" asp-route-id="@inv.Id" class="text-decoration-none fw-semibold">
                        @inv.Title
                    </a>
                </td>

                <td>@inv.Category</td>
                <td>@(inv.IsPublic ? "Yes" : "No")</td>
                <td>
                    @foreach (var tag in inv.Tags)
                    {
                        <span class="tag-pill">@tag.Name</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h3>Инвентаризации, к которым у вас есть доступ</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Owner</th>
            <th>Category</th>
            <th>Public</th>
            <th>Tags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inv in Model.EditableInventories)
        {
            <tr>
                <td>@inv.Title</td>
                <td>@inv.OwnerName</td>
                <td>@inv.Category</td>
                <td>@(inv.IsPublic ? "Да" : "Нет")</td>
                <td>
                    @foreach (var tag in inv.Tags)
                    {
                        <span class="badge bg-secondary me-1">@tag.Name</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Inventory" asp-route-id="@inv.Id" class="btn btn-sm btn-info">Открыть</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById("selectAll").addEventListener("change", function () {
            const checked = this.checked;
            document.querySelectorAll(".row-checkbox").forEach(cb => cb.checked = checked);
        });

        document.getElementById("EditBtn").addEventListener("click", function () {
            const selected = Array.from(document.querySelectorAll(".row-checkbox:checked")).map(cb => cb.value);
            if (selected.length > 0) {
                const query = selected.map(id => `ids=${id}`).join("&");
                window.location.href = `/Inventory/Edit?${query}`;
            } else {
                alert("Выберите хотя бы одну строку.");
            }
        });

        document.getElementById("SelectDeleteBtn").addEventListener("click", function () {
            const selected = Array.from(document.querySelectorAll(".row-checkbox:checked")).map(cb => cb.value);
            if (selected.length > 0) {
                const query = selected.map(id => `ids=${id}`).join("&");
                window.location.href = `/Inventory/SelectDelete?${query}`;
            } else {
                alert("Выберите хотя бы одну строку.");
            }
        });
    </script>
}

@section Styles {
    <style>
        .button-13 {
            background-color: #fff;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            box-shadow: rgba(213, 217, 217, .5) 0 2px 5px 0;
            box-sizing: border-box;
            color: #0f1111;
            cursor: pointer;
            display: inline-block;
            font-family: "Amazon Ember", sans-serif;
            font-size: 13px;
            line-height: 29px;
            padding: 0 10px 0 11px;
            position: relative;
            text-align: center;
            text-decoration: none;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            vertical-align: middle;
            width: 120px;
            transition: background-color 0.2s ease;
        }

            .button-13:hover {
                background-color: #f7fafa;
            }

            .button-13:focus {
                border-color: #008296;
                box-shadow: rgba(213, 217, 217, .5) 0 2px 5px 0;
                outline: 0;
            }

        .tag-pill {
            display: inline-block;
            padding: 4px 10px;
            margin-right: 6px;
            margin-bottom: 4px;
            font-size: 0.85rem;
            font-weight: 500;
            color: #495057;
            background-color: #f1f3f5;
            border: 1px solid #dee2e6;
            border-radius: 20px;
            transition: background-color 0.2s ease;
        }

            .tag-pill:hover {
                background-color: #e2e6ea;
                cursor: default;
            }
    </style>
}
