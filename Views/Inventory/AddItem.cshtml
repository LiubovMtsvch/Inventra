@model CourseProjectitr.Models.InventoryItemViewModel

@{
    ViewData["Title"] = "Add Item";
}

<h2 class="mb-4">Add Item to Inventory: @Model.InventoryTitle</h2>

<div class="table-scroll">
    <form asp-action="AddItem" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="InventoryId" value="@Model.InventoryId" />

        <table class="table-clean table table-bordered table-striped table-hover align-middle text-start">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Inventory Number</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input name="Title" class="form-control" placeholder="Item title" required />
                    </td>
                    <td class="wrap-text text-wrap">
                        <textarea name="Description" class="form-control" placeholder="Item description"></textarea>
                    </td>
                    <td>
                        <input name="InventoryNumber" class="form-control" placeholder="e.g. ITEM-001" required />
                    </td>
                </tr>
            </tbody>
        </table>

        <button type="submit" class="button-13">Save</button>

    </form>
</div>

@section Styles {
    <style>
        .table-clean {
            font-size: 0.95rem;
            border-collapse: collapse;
        }

        .form-control {
            width: 100%;
            padding: 6px;
            box-sizing: border-box;
        }

        .button-13 {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
        }

            .button-13:hover {
                background-color: #0056b3;
            }

        .table-scroll {
            overflow-x: auto;
        }

        .wrap-text {
            word-break: break-word;
        }

        .text-start {
            text-align: left;
        }
    </style>
}
